<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 <configuration>
 	<!-- 자주 사용하는 type 의 별칭을 등록 해 놓고  Mapper xml 에서 사용할수 있다. -->
	<typeAliases>
		<typeAlias type="com.brave.chockpaler.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.brave.chockpaler.userorder.dto.UserOrderDto" alias="userorderDto"/>
		<typeAlias type="com.brave.chockpaler.items.dto.ItemsDto" alias="itemsDto"/>
		<typeAlias type="com.brave.chockpaler.basket.dto.BasketDto" alias="basketDto"/>
	</typeAliases>
	<!-- 필요한 Mapper xml 등록하기  -->
	<mappers>
		<mapper resource="com/brave/chockpaler/mybatis/UsersMapper.xml"/>
		<mapper resource="com/brave/chockpaler/mybatis/UserOrderMapper.xml"/>
		<mapper resource="com/brave/chockpaler/mybatis/ItemsMapper.xml"/>
		<mapper resource="com/brave/chockpaler/mybatis/OrderInquiryMapper.xml"/>
		<mapper resource="com/brave/chockpaler/mybatis/BasketMapper.xml"/>
	</mappers>
 </configuration> 